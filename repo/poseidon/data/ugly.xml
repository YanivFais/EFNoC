<?xml version="1.0" encoding="UTF-8" ?>

<platform width="3" height="3">
	<topology type="custom">
		<link source="(0,1)" sink="(2,1)"/>
		<link source="(2,2)" sink="(0,2)"/>

		<link source="(1,0)" sink="(1,2)"/>
		<link source="(2,2)" sink="(2,0)"/>
		<link source="(2,0)" sink="(2,2)"/>


		<link source="(1,2)" sink="(1,0)"/>
		<link source="(0,1)" sink="(0,2)"/>
		<link source="(0,2)" sink="(0,1)"/>

		<link source="(2,2)" sink="(2,1)"/>
		<link source="(1,1)" sink="(2,1)"/>
		<link source="(2,1)" sink="(2,2)"/>

		<link source="(0,1)" sink="(1,1)"/>
		<link source="(0,0)" sink="(0,1)"/>
		<link source="(2,2)" sink="(1,2)"/>
		<link source="(0,0)" sink="(2,0)"/>
	</topology>
</platform>


<communication type="custom">
	<channel from="(0,0)" to="(1,1)" bandwidth="10" response="true" response-delay="2"/>
	<channel from="(0,1)" to="(2,2)" bandwidth="2" response="false"/>
	<channel from="(0,2)" to="(2,2)" bandwidth="2" response="false"/>
	<channel from="(1,1)" to="(2,2)" bandwidth="2" response="false"/>
</communication>


